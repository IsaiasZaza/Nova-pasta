model User {
  id         Int         @id @default(autoincrement())
  name       String
  senha      String
  cpf        String      @unique
  phone      String
  email      String      @unique
  cep        String
  street     String
  number     String
  complement String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  carrinhos  Carrinho[]
}

model Produto {
  id         Int         @id @default(autoincrement())
  nome       String
  price      Float
  quantidade Int
  image      String?

  cartItems  CartItem[]
}

model Carrinho {
  id        Int         @id @default(autoincrement())
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  items     CartItem[]
}

model CartItem {
  id         Int      @id @default(autoincrement())
  carrinhoId Int
  produtoId  Int
  quantidade Int      @default(1)

  carrinho   Carrinho @relation(fields: [carrinhoId], references: [id])
  produto    Produto  @relation(fields: [produtoId], references: [id])
}
