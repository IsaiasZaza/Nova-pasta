model User {
  id         Int      @id @default(autoincrement())
  name       String
  senha      String
  cep        String
  endereco   String
  phone      String?
  email      String   @unique
  nascimento String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  carrinhos Carrinho[]
}

model Vendedor {
  id          Int      @id @default(autoincrement())
  nomeNegocio String
  cnpj        String   @unique
  email       String   @unique
  senha       String
  cep         String
  logradouro  String
  numero      String
  complemento String?
  contato     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  produtos Produto[] // <-- relação automática (1 vendedor tem vários produtos)
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String
  price      Float
  quantidade Int
  image      String?

  vendedorId Int
  vendedor   Vendedor @relation(fields: [vendedorId], references: [id])

  cartItems CartItem[]
}

model Carrinho {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cupomId Int?
  cupom   Cupom?     @relation(fields: [cupomId], references: [id])
  items   CartItem[]
}

model CartItem {
  id         Int @id @default(autoincrement())
  carrinhoId Int
  produtoId  Int
  quantidade Int @default(1)

  carrinho Carrinho @relation(fields: [carrinhoId], references: [id])
  produto  Produto  @relation(fields: [produtoId], references: [id])
}

model Cupom {
  id        Int          @id @default(autoincrement())
  codigo    String       @unique
  tipo      TipoDesconto
  valor     Float
  expiracao DateTime
  usado     Boolean      @default(false)
  carrinhos Carrinho[] // Carrinhos que usaram esse cupom (opcional)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TipoDesconto {
  PORCENTAGEM
  VALOR_FIXO
}
